<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <shutdownHook/>
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}%d{"yyyy-MM-dd'T'HH:mm:ss,SSSXXX", Europe/Paris} [%thread] %p %c{1} [%t] %m%n</pattern>-->
            <pattern>%d{"HH:mm:ss XXX"} %5p --- [%t] %-25.25logger{20} : %m%n</pattern>
        </encoder>
    </appender>

    <root level="all">
        <appender-ref ref="Console"/>
    </root>
</configuration>